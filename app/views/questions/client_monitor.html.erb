<div class="container">

  <form id="input-form" class="form-inline">
    <div class="form-group">
      <input id="input-author" type="text" class="form-control" placeholder="Name" autofocus />
    </div>
    <div class="form-group">
      <input id="input-fromv" type="text" class="form-control" placeholder="From" autofocus />
    </div>
    <div class="form-group">
      <input id="input-body" type="text" class="form-control" placeholder="Enter question here!" autofocus />
    </div>
    <button class="btn btn-primary" type="submit">Send</button>
  </form>
  <div class="page-header">
    <h1>Questions</h1>
  </div>
  <div id="chat-text">
    <%- @questions.each do |question| %>
      <div class="panel panel-default">
        <div class="panel-heading"><%= "#{question.name} From #{question.from}" %></div>
        <div class="panel-body"><%= question.question %></div>
      </div>
    <%- end %>
  </div>
</div>
