<% provide(:title, "Moderator Monitor") %>

<div id="moderator-monitor" class="moderator-monitor row">
  
  <div class="row">
    <div class="col-md-4">
      <select class="form-control" id="message-type">
        <option value="0">Select Message to Send</option>
        <option value="morning_lesson_message">Morning Lesson</option>
        <option value="technical_problems_message">Technical Problems</option>
        <option value="yeshivat_haverim_message">Yeshivat Haverim</option>
      </select>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <button id="btn-delete-all" type="button" class="btn btn-xs btn-danger">Delete ALL</button>
    </div>
  </div>
  
  <div id="unselected-questions-cont" class="questions-cont unselected col-md-6">
    <!--<div class="row">-->
    <!--  <div class="col-md-4"><span><%= t('questions.monitor.unselected') %></span></div>-->
    <!--  <div class="col-md-4"></div>-->
    <!--  <div class="col-md-4"></div>-->
    <!--</div>-->
    
    <%- @questions.each do |question| %>
    	<%= render partial: "moderator_question_form", 
  		  locals: {question: question} %>
    <%- end %>
  </div>
  
  
  
  <div id="selected-questions-cont" class="questions-cont selected col-md-6">
    <%- @selected_questions.each do |question| %>
    
    	<%= render partial: "moderator_question_form", 
  		  locals: {question: question} %>
  		  
    <%- end %>
  </div>
</div>

<div class="moderator-messages-cont" id="moderator-messages-cont"></div>

<%= render(:partial => 'moderator_monitor.js', :formats => [:js] ) %>

